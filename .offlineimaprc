[general]
accounts = me@alyssackwan.name, superadmin@alyssackwan.name, alyssa.c.kwan@gmail.com
maxsyncaccounts = 4
pythonfile = ~/setup/.offlineimap.py

[Account me@alyssackwan.name]
localrepository = local_me@alyssackwan.name
remoterepository = remote_me@alyssackwan.name

[Repository local_me@alyssackwan.name]
type = Maildir
localfolders = ~/.offlineimap.d/maildir/me@alyssackwan.name

[Repository remote_me@alyssackwan.name]
type = Gmail
maxconnections = 2
remoteuser = me@alyssackwan.name
remotepasseval = remotepasseval('{HOME}/setup/.offlineimap/me@alyssackwan.name.gpg')
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
sslcacertfile = ~/opt/homebrew/etc/openssl/cert.pem

